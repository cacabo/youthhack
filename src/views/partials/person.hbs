<div class="col-12 col-sm-6 col-md-4 col-lg-3">
  <div class="person card">
    <div class="card-img-top background-image" style="background-image: url(./img/team/{{image}})">
    </div>
    <div class="card-body">
      <p class="bold name">{{name}}</p>
      <p class="text-muted title">{{title}}</p>
      <a href="mailto:{{email}}" class="cyan-text no-decoration">
        <i class="fa fa-envelope"></i> {{email}}
      </a>
    </div>
  </div>
</div>
