<div class="col-12 col-sm-6 col-md-4 col-lg-3">
  <a href="{{link}}" class="black-text no-decoration">
    <div class="article shade-1">
      <div class="article-image">
        <img src="./img/{{image}}" class="img-fluid" alt="{{name}}">
      </div>
      <h4 class="special">
        {{title}}
      </h4>
      {{#if subtitle}}
        <p>
          {{subtitle}}
        </p>
      {{/if}}
    </div>
  </a>
</div>
